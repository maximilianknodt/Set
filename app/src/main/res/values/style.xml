<?xml version="1.0" encoding="utf-8"?>

<!-- @author Maximilian Knodt - responsible for this data -->

<resources>

    <!-- Specific Styles for Views -->
    <style name="View_Base">
        <item name="android:background">@color/Underline</item>item>
    </style>

    <style name="View_Base.Tablecorner">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="View_Base.Underline_Constraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="View_Base.Underline_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>


    <!-- Style for TextViews -->
    <style name="TextView_Base">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView_Base.Constraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TextView_Base.Constraint.Header">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="TextView_Base.Constraint.Normal">
        <item name="android:gravity">center|right|center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView_Base.TableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="TextView_Base.TableRow.Normal">
        <item name="android:layout_column">1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView_Base.TableRow.Special">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView_Base.TableRow.Special.Body">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView_Base.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextView_Base.Linear.Normal">
        <item name="android:textStyle">normal</item>
    </style>


    <!-- Styles for the Headlines -->
    <style name="TextView_Base.Headline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextView_Base.Headline.Headline2">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView_Base.Headline.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/primaryColorVariant</item>
        <item name="android:color">@color/onSecondary</item>
    </style>


    <!-- Specific Styles for Buttons -->
    <style name="Button_Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button_Base.LinearLayout">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button_Base.Set">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ImageButton">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>


    <!-- Style for Layouts -->
    <!-- Style for the LinearLayout / Cards -->
    <style name="LinearLayout_Card">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@color/onPrimary</item>
    </style>

    <style name="Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Table_Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>