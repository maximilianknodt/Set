<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- @author Maximilian Knodt-->

    <TextView
        android:id="@+id/textview_Singleplayer_Headline"
        android:text="@string/settings"
        style="@style/TextView_Base.Headline.Linear" />

    <View
        android:id="@+id/view_Singleplayer_Underline"
        style="@style/View_Base.Underline_Linear" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView_Settings"
        android:name="com.example.set.SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>