<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkmode_Primary">

    <!-- @author Maximilian Knodt-->

    <TextView
        android:id="@+id/textview_Singleplayer_Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/darkmode_Headline"/>

    <View
        android:id="@+id/view_Singleplayer_Underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/darkmode_Headline"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView_Settings"
        android:name="com.example.set.SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>